{
  "description": "Ralph Loop plugin hooks - Soul Brews edition with session isolation",
  "source": {
    "base": "anthropics/claude-plugins-official/plugins/ralph-loop",
    "extended": "Soul-Brews-Studio/ralph-local"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start-hook.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/stop-hook.sh"
          }
        ]
      }
    ]
  }
}
